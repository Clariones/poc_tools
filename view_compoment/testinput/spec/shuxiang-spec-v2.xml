<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:c="http://clariones.doublechaintech.com/uischema.xml"
    template="mobile" >
    <!-- 首页 -->
	<c:page name="customer-home-page" title="书香社区">
        <c:data-source user="$(customer)"/>
        <c:data-source shop="$(store)"/>

        <c:row class="flat-bar background-main" name="header-bar">
        	<c:row link-to-url="/wxaService/storeList/">
            	<c:text class="text-color-marked-main text-size-section-title" data-source="$(shop.store_name)"></c:text>
            	<c:text class="text-size-section-title">&lt;切换&gt;</c:text>
            </c:row>
            <!--  搜索功能暂时没用
            <c:container class="container-horizontal align-right">
            	<c:search api-url="/wxaService/searchInHomePage/">搜索</c:search>
            </c:container>
             -->
        </c:row>
        <c:carousel name="ad-block"
              data-source="$(shop.store_slide)"
              data-source-link="$(wxa_link_url)"
              data-source-image="$(banner_image)"
              data-source-tips="$(tips)">
                <c:image src-url="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTL0zJ2f6DwWOw6xkuc16pDAyxfGv5_udkV1c0VbAUctmFULbbD"/>
                <c:image src-url="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQY2RLztnCf306MdR4wm9RUTJy2r0HHc0c3HY2oQyjXLUR9nBZ9"/>
                <c:image src-url="https://i0.hdslb.com/bfs/article/4486e9c92b7add273a5b55f86a816d0603c1313f.jpg"/>
        </c:carousel>
        <c:row class="text-size-main text-color-main card icon-list normal-top-space normal-bottom-space" name="action-bar">
             <c:column class="icon-item" link-to-url="/wxaService/wantBorrowBook/scanCode/" >
             	<c:image src-url="/images/borrowBook.png" class="image-size-icon"/>
             	<c:text>借书</c:text>
             </c:column>
             <c:column class="icon-item"  link-to-url="/wxaService/wantBuyBook/">
             	<c:image src-url="/images/buyBook.png" class="image-size-icon"/>
             	<c:text>买书</c:text>
             </c:column>
             <c:column class="icon-item"  link-to-url="/wxaService/wantShareBook/$(shop.id)/">
             	<c:image src-url="/images/shareBook.png" class="image-size-icon"/>
             	<c:text>共享</c:text>
             </c:column>
             <c:column class="icon-item"  link-to-url="/wxaService/myMessageList/">
             	<c:image src-url="/images/myMessages.png" class="image-size-icon"/>
             	<c:text>提醒</c:text>
             </c:column>
        </c:row>
        <c:row class="flat-bar align-both-ends background-main" name="campagin-header">
        		<c:text class="text-size-section-title normal-top-space">活动</c:text>
        		<c:row link-to-url="./wxaService/storeCampaignList/$(shop.id)/" class="text-color-green no-flex-weight">
	        		<c:text class="text-size-main normal-top-space"	>更多</c:text>
	        		<c:font-icon>ellipsis-h</c:font-icon>
        		</c:row>
        </c:row>
        <c:column>
        	<c:row class="card" data-source="$(shop.campaign)" link-to-url="/wxaService/campaignDetail/$(id)/">
        		<c:column class="campaign-info-left">
        			<c:image class="image-size-list-thumbnail" src-url="$(campaign_image)"></c:image>
        			<c:text class="text-color-marked-note text-size-main campaign-status pin-to-left-top" data-source="$(campaign_status)">状态</c:text>
        		</c:column>
        		<c:column class="campaign-info-right" name="campaign-info-block">
        			<c:text class="text-color-marked-main text-size-main" data-source="$(campaign_name)">标题</c:text>
        			<c:row>
        				<c:date name="campaign-hold-time" data-source="$(campaign_start_time)" format="yyyy-MM-dd HH:mm">时间</c:date>
        				<c:text>~</c:text>
        				<c:date name="campaign-finish-time" data-source="$(campaign_finish_time)" format="HH:mm">时间</c:date>
        			</c:row>
        			<c:text class="text-color-main text-size-main" data-source="$(campaign_hold_address)" format="2,...,8">地点</c:text>
        			<c:row>
        				<c:text name="register-info" data-source="$(_by_key_reg_cnt)/$(available_register_quantity)人"></c:text>
        			</c:row>
        		</c:column>
        	</c:row>
        </c:column>
    </c:page>

	<!-- ***************************  用户、我的  ********************************* -->
	<!-- 我的 首页 -->
    <c:page name="customer-profile" title="我的">
		<c:data-source user="$(customer)"/>
		<c:data-source platform="$(book_sharing_platform)"/>
		
		<c:column class="card align-center normal-bottom-space" link-to-url="/wxaService/viewCustomerProfile/">
			<c:image class="image-size-thumbnail" src-url="$(user.logo_image)"></c:image>
			<c:text class="text-size-marked-main" data-source="$(user.nick_name)"></c:text>
			<c:text class="text-size-main" data-source="$(user.member_service.product_name)" />
			<c:money class="text-size-section-title text-color-marked-main" data-source="$(user.account_balance)"></c:money>
		</c:column>
		
		<c:column class="card normal-bottom-space">
			<c:text class="text-size-section-title normal-top-space">会员服务</c:text>
			<c:row class="align-left scroll-row">
				<c:column class="no-flex-weight normal-space" data-source="$(platform.member_service_product)" link-to-url="/wxaService/selectMemberService/$(id)/">
					<c:image class="image-size-list-thumbnail" src-url="$(product_cover_image)" click-to-view-big="false" ></c:image>
					<c:text data-source="$(product_name)"></c:text>
				</c:column>
			</c:row>
		</c:column>
		
		<c:row name="item-list" class="list-as-grid-row align-left">
			<c:column class="list-as-grid-row-item each-row-3" link-to-url="/wxaService/customerMemberRights/">
				<c:image src-url="/images/1.png"></c:image>
				<c:text class="text-size-section-title text-color-main">我的权益</c:text>
			</c:column>
			<c:column class="list-as-grid-row-item each-row-3" link-to-url="/wxaService/customerBorrowHistory/">
				<c:image src-url="/images/1.png"></c:image>
				<c:text class="text-size-section-title text-color-main">我的借阅</c:text>
			</c:column>
			<c:column class="list-as-grid-row-item each-row-3" link-to-url="/wxaService/customerCampaingList/">
				<c:image src-url="/images/1.png"></c:image>
				<c:text class="text-size-section-title text-color-main">我的活动</c:text>
			</c:column>
			<c:column class="list-as-grid-row-item each-row-3" link-to-url="/wxaService/customerAccountDetail/">
				<c:image src-url="/images/1.png"></c:image>
				<c:text class="text-size-section-title text-color-main">我的余额</c:text>
			</c:column>
			<c:column class="list-as-grid-row-item each-row-3" link-to-url="/wxaService/customerReviewList/">
				<c:image src-url="/images/1.png"></c:image>
				<c:text class="text-size-section-title text-color-main">我的书评</c:text>
			</c:column>
			<c:column class="list-as-grid-row-item each-row-3" link-to-url="/wxaService/customerOrderList/needPay/">
				<c:image src-url="/images/1.png"></c:image>
				<c:text class="text-size-section-title text-color-main">我的订单</c:text>
			</c:column>
		</c:row>
	</c:page>
	
	<!-- 我的 借阅 -->
	<c:page name="customer-borrow-list" title="我的借阅">
		<c:data-source user="$(customer)" />
		<c:column class="align-center card normal-bottom-space">
			<c:text class="text-size-section-title text-color-marked-main"
				data-source="您当前有$(user._by_key_inBorrwingCount)本在借图书">借书数量</c:text>
			<c:text class="text-color-note"
				data-source="可再借$(user._by_key_canBorrowCount)本" />
			<c:text class="text-color-note"
				data-source="($(user._by_key_reason))" />
		</c:column>
		<c:column data-source="$(user.borrowing_history)"
			name="borrow-info">
			<c:row class="card small-bottom-space"
				link-to-url="/wxaService/borrowingHistoryDetail/$(id)/">
				<c:image class="image-size-thumbnail wide_block"
					src-url="$(book.book_cover)"></c:image>
				<c:column class="container-vertical roomy_block">
					<c:text
						class="text-size-section-title text-color-marked-main"
						format="10,...,5" data-source="$(book.book_name)"></c:text>
					<c:text class="text-size-main text-color-main"
						format="10,...,5"
						data-source="$(book.book_author)"></c:text>
					<c:date class="text-size-main text-color-main"
						data-source="$(lending_datetime)" format="借书日期: yyyy.MM.dd"></c:date>
					<c:date class="text-size-main text-color-main"
						data-source="$(free_lending_expired_datetime)"
						format="免费期至: yyyy.MM.dd"></c:date>
					<c:text name="borrowing-status" class="pin-to-right-top"
						data-source="$(_by_key_status)">状态</c:text>
				</c:column>
			</c:row>
		</c:column>
	</c:page>
	
	<!-- 我的 借阅详情 -->
	<c:page name="customer-borrow-detail" title="借阅详情">
    	<c:data-source record="$(borrowing_history)"/>
    	
    	<c:row name="messge" class="align-center">
    		<c:text class="text-size-section-title text-color-marked-main" data-source="$(record._by_key_message)"></c:text>
    	</c:row>
    	<c:row class="card normal-bottom-space" link-to-url="/wxaService/bookCopyDetail/$(record.book_copy.id)/">
    		<c:column class="wide_block">
    			<c:image class="image-size-thumbnail" src-url="$(record.book.book_cover)">图书封面</c:image>
    		</c:column>
    		<c:column class="roomy_block">
    			<c:text class="text-size-section-title text-color-marked-main" data-source="$(record.book.book_name)">书名</c:text>
    			<c:text class="text-size-main text-color-main" data-source="$(record.book.book_recommend.name)">推荐类别</c:text>
    		</c:column>
    	</c:row>
    	<c:row name="from-store-name" class="align-both-ends card" >
    		<c:text class="text-size-main text-color-main">借书门店</c:text>
    		<c:text class="text-size-main text-color-main" data-source="$(record.lending_store.store_name)">店名</c:text>
    	</c:row>
    	<c:row name="borrow-time" class="align-both-ends card" >
    		<c:text class="text-size-main text-color-main">借书日期</c:text>
    		<c:date class="text-size-main text-color-main" data-source="$(record.lending_datetime)" format="yyyy-MM-dd">借书日</c:date>
    	</c:row>
    	<c:row name="expire-date" class="align-both-ends card" >
    		<c:text class="text-size-main text-color-main">免费阅读至</c:text>
    		<c:date class="text-size-main text-color-main" data-source="$(record.free_lending_expired_datetime)" format="yyyy-MM-dd">借书日</c:date>
    	</c:row>
    	<c:row name="return-store-name" class="align-both-ends card">
    		<c:text class="text-size-main text-color-main">还书门店</c:text>
    		<c:text class="text-size-main text-color-main" data-source="$(record.return_store.store_name)">店名</c:text>
    	</c:row>
    	<c:row name="return-time" class="align-both-ends card" >
    		<c:text class="text-size-main text-color-main">还书日期</c:text>
    		<c:date class="text-size-main text-color-main" data-source="$(record.return_datetime)" format="yyyy-MM-dd">还书日</c:date>
    	</c:row>
    	<c:row name="expire-prompt" class="align-both-ends card">
    		<c:text class="text-size-main text-color-warning" data-source="您借阅的《$(record.book.book_name)》已经超过免费阅读期了，请尽快到附近的门店归还。">逾期提醒</c:text>
    	</c:row>
    	<c:row name="expire-days" class="align-both-ends card" >
    		<c:text class="text-size-main text-color-main">逾期天数</c:text>
    		<c:text class="text-size-main text-color-main" data-source="$(record._by_key_expiredDays)天"></c:text>
    	</c:row>
    	<c:row name="expire-fee" class="align-both-ends card" >
    		<c:text class="text-size-main text-color-main">逾期费用</c:text>
    		<c:money class="text-size-main text-color-main" data-source="$(record._by_key_expireFee)" format="#,##0.##元"></c:money>
    	</c:row>
    	
    	<c:row name="actions" class="fixed-at-bottom">
    		<c:button name="pay" link-to-url="/wxaService/customerStartPayOrder/$(record._by_key_orderId)/">支付
    			<c:font-icon>credit-card</c:font-icon>
    		</c:button>
    	</c:row>
    </c:page>
	
	
	
	
</root>
