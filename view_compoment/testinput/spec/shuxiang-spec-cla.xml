    				<c:container class="container-vertical">
    					<c:text class="text-size-section-title text-color-marked-main" data-source="$(book.book_name)">书名</c:text>
    					<c:text class="text-size-main text-color-main" data-source="$(book.book_author)/$(book.book_publisher)">书名</c:text>
    					<c:container class="text-size-main text-color-main">
    						<c:text>借书日期</c:text>
    						<c:date data-source="$(lending_datetime)" format="yyyy-MM-dd"></c:date>
    					</c:container>
    					<c:container class="text-size-main text-color-main">
    						<c:text>免费期至</c:text>
    						<c:date data-source="$(free_lending_expired_datetime)" format="yyyy-MM-dd"></c:date>
    					</c:container>
    				</c:container>
    				<c:text name="borrowing-status" class="pin-to-right-top" data-source="$(_by_key_statusTips)">状态</c:text>
    			</c:container>
    		</c:container>
    	</c:container>
    </c:page>
  
    <c:page name="customer-borrow-detail" title="我的借阅">
    	<c:data-source record="$(borrowing_history)"/>
    	
    	<c:container class="container-horizontal card" link-to-url="/wxaService/bookDetail/$(record.book.id)/">
    		<c:container>
    			<c:image src-url="$(record.book.book_cover)">图书封面</c:image>
    		</c:container>
    		<c:container class="container-vertical">
    			<c:text class="text-size-main text-color-marked-main" data-source="$(record.book.book_name)">书名</c:text>
    			<c:text class="text-size-main text-color-main" data-source="$(record.book.book_recommend.name)">推荐类别</c:text>
    		</c:container>
    	</c:container>
    	<c:container name="from-store-name" class="container-horizontal" >
    		<c:text class="text-size-main text-color-main aligh-left">借书门店</c:text>
    		<c:text class="text-size-main text-color-main align-right" data-source="$(record.lending_store.store_name)">店名</c:text>
    	</c:container>
    	<c:container name="return-time" class="container-horizontal" >
    		<c:text class="text-size-main text-color-main aligh-left">借书日期</c:text>
    		<c:date class="text-size-main text-color-main align-right" data-source="$(record.lending_datetime)" format="yyyy-MM-dd">借书日</c:date>
    	</c:container>
    	<c:container name="expire-date" class="container-horizontal" >
    		<c:text class="text-size-main text-color-main aligh-left">免费阅读至</c:text>
    		<c:date class="text-size-main text-color-main align-right" data-source="$(record.free_lending_expired_datetime)" format="yyyy-MM-dd">借书日</c:date>
    	</c:container>
    	<c:container name="return-store-name" class="container-horizontal" data-source="$(record.return_store)">
    		<c:text class="text-size-main text-color-main aligh-left">还书门店</c:text>
    		<c:text class="text-size-main text-color-main align-right" data-source="$(store_name)">店名</c:text>
    	</c:container>
    	<c:container name="return-time" class="container-horizontal" >
    		<c:text class="text-size-main text-color-main aligh-left">还书日期</c:text>
    		<c:date class="text-size-main text-color-main align-right" data-source="$(return_datetime)" format="yyyy-MM-dd">还书日</c:date>
    	</c:container>
    	<c:container name="expire-prompt" class="container-horizontal">
    		<c:text class="text-size-main text-color-warning aligh-left" data-source="您借阅的《$(book.book_name)》已经超过免费阅读期了，请尽快到附近的门店归还。">逾期提醒</c:text>
