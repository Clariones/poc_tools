<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:c="http://clariones.doublechaintech.com/uischema.xml"
    template="mobile" >
    <c:page name="customer-home-page" title="书香社区">
        <c:data-source user="$(customer)"/>
        <c:data-source shop="$(store)"/>

        <c:container class="container-horizontal" name="header-block">
          	<c:text class="text-size-section-title text-color-marked-main" name="header-title">书香社区</c:text>
        </c:container>
        <c:container class="container-horizontal" name="header-bar">
        	<c:container class="container-horizontal align-left">
            	<c:text data-source="$(shop.store_name)">香榭国际2期店</c:text>
            	<c:text link-to-url="/wxaService/storeList/"><![CDATA[<切换>]]></c:text>
            </c:container>
            <c:container class="container-horizontal align-right">
            	<c:search api-url="/wxaService/searchInHomePage/">搜索</c:search>
            </c:container>
        </c:container>
        <c:carousel name="ad-block"
              data-source="$(shop.store_slide)" 
              data-source-link="$(wxa_link_url)"
              data-source-image="$(wxa_link_url)"
              data-source-tips="$(wxa_link_url)">
                <c:image src-url="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTL0zJ2f6DwWOw6xkuc16pDAyxfGv5_udkV1c0VbAUctmFULbbD"/>
                <c:image src-url="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQY2RLztnCf306MdR4wm9RUTJy2r0HHc0c3HY2oQyjXLUR9nBZ9"/>
                <c:image src-url="https://i0.hdslb.com/bfs/article/4486e9c92b7add273a5b55f86a816d0603c1313f.jpg"/>
        </c:carousel>
        <c:container class="container-horizontal text-size-main text-color-main" name="action-bar">
             <c:container class="container-vertical" >
             	<c:image src-url="/images/borrowBook.png" class="image-size-icon"/>
             	<c:text link-to-url="/wxaService/wantBorrowBook/scanCode/">借书</c:text>
             </c:container>
             <c:container class="container-vertical" >
             	<c:image src-url="/images/buyBook.png" class="image-size-icon"/>
             	<c:text link-to-url="/wxaService/wantBuyBook/">买书</c:text>
             </c:container>
             <c:container class="container-vertical" >
             	<c:image src-url="/images/shareBook.png" class="image-size-icon"/>
             	<c:text link-to-url="/wxaService/wantShareBook/$(shop.id)/">共享</c:text>
             </c:container>
             <c:container class="container-vertical" >
             	<c:image src-url="/images/myMessages.png" class="image-size-icon"/>
             	<c:text link-to-url="/wxaService/myMessageList/">提醒</c:text>
             </c:container>
        </c:container>
        <c:container class="container-horizontal" name="campagin-header">
        	<c:container class="container-horizontal align-left">
        		<c:text class="text-size-section-title">活动</c:text>
        	</c:container>
        	<c:container class="container-horizontal align-right">
        		<c:text class="text-size-main btn btn-primary" 
        				link-to-url="./wxaService/storeCampaignList/$(shop.id)/">
        			查看全部&gt;&gt;
        		</c:text>
        	</c:container>
        </c:container>
        <c:container class="container-vertical">
        	<c:text class="text-size-subscript text-color-note">这块的布局有交错重叠，复杂。所以我要动用coder.less了。此块内布局不用调。</c:text>
        	<c:container class="container-horizontal" data-source="$(shop.campaign)">
        		<c:container class="campagin-info-left">
        			<c:image class="image-size-thumbnail campaign-image" src-url="$(campaign_image)"></c:image>
        			<c:text class="text-color-marked-note text-size-main campaign-status" data-source="$(campaign_status)">状态</c:text>
        		</c:container>
        		<c:container class="container-vertical campagin-info-center" name="campain-info-block">
        			<c:text class="text-color-marked-main text-size-main" data-source="$(campaign_name)">标题</c:text>
        			<c:text name="campagin-hold-time" class="text-color-main text-size-main" data-source="$(campaign_start_time)">时间</c:text>
        			<c:text class="text-color-main text-size-main" data-source="$(campaign_hold_address)">地点</c:text>
        		</c:container>
        		<c:container class="container-horizontal align-right">
        			<c:text name="register-info" data-source="$(campaign_name)">报名情况</c:text>
        		</c:container>
        	</c:container>
        </c:container>
    </c:page>

    
	<c:page name="customer-store-list" title="门店列表">
        <c:data-source user="$(customer)"/>
        <c:data-source plateform="$(book_sharing_platform)"/>
        <c:container class="container-horizontal">
        	<c:text class="text-size-section-title text-color-marked-main">附近的门店</c:text>
        </c:container>
        <c:container class="container-vertical">
        	<c:container class="container-horizontal"  name="store-info-block" link-to-url="/wxaService/viewStore/$(id)/" data-source="$(plateform.store)">
        		<c:image class="image-size-thumbnail" src-url="$(store_image)"></c:image>
        		<c:container class="container-vertical" name="store-desc-block">
        			<c:text class="text-size-main text-color-marked-main" data-source="$(store_name)">名称</c:text>
        			<c:container>
        				<c:text class="text-size-main" data-source="$(store_address)">地址</c:text>
        				<c:text class="text-size-main" data-source="$(store_room_number)">房间号</c:text>
        			</c:container>
        			<c:text class="text-size-main" data-source="$(store_open_time)">营业时间</c:text>
        		</c:container>
        		<c:container class="container-horizontal align-right">
        			<c:text name="store-distance" class="text-size-main text-color-marked-note" data-source="$(_by_key_distance)">状态</c:text>
        		</c:container>
        	</c:container>
        </c:container>
    </c:page>
    
    <c:page name="customer-borrow-book" title="借书">
        <c:data-source text-message-1="var: string"/>
        <c:data-source text-message-2="var: string"/>
        <c:data-source user="$(customer)"/>
        
        <!-- 
        <c:container class="block-title">
        	<c:text>借书</c:text>
        </c:container>
         -->
        <c:container class="container-vertical align-center" >
        	<c:text name="first-line" class="text-size-section-title text-color-marked-main" data-source="$(user._by_key_borrowed)">第一行</c:text>
        	<c:text name="second-line" class="text-size-section-title text-color-marked-main" data-source="$(user._by_key_total_allowed)">第二行</c:text>
        	<c:text name="view-borrow-history" class="btn btn-primary" link-to-url="/wxaService/viewBorrowHistory/$(user.id)/">查看借阅详情</c:text>
        	<c:bar_or_qr_code name="my-code" class="image-size-main" data-source="$(user.id)">我的二维码</c:bar_or_qr_code>
        	<c:text name="bottom-line" class="text-size-note text-color-note" data-source="$(user._by_key_scene)">底行</c:text>
        	<c:scanner name="BorrowBook" class="wxa-scanner" api-url="/wxaService/customerBorrowBook/"></c:scanner>
        	<c:container class="container-horizontal">
        		<c:container name="showQrCode" class="container-vertical" link-to-url="/wxaService/wantBorrowBook/showCode/">
        			<c:image class="image-size-icon" src-url="/images/showMyQrCode.png"></c:image>
        			<c:text class="text-size-main">我的借书码</c:text>
        		</c:container>
        		<c:container name="scanToBorrow" class="container-vertical" link-to-url="/wxaService/wantBorrowBook/scanCode/">
        			<c:image class="image-size-icon" src-url="/images/scanner.png"></c:image>
        			<c:text class="text-size-main">自助借书</c:text>
        		</c:container>
        	</c:container>
        </c:container>
        
    </c:page>
    
    
</root>